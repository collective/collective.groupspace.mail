<dl class="portlet portletNews"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="groupspace.mail">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile"
              i18n:translate="box_group_mail">Group Mail</span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:groupspaces tal:repeat="principal view/group_mail">
    <dd tal:define="oddrow repeat/principal/odd;"
        tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
        <a href=""
           class="tile"
           tal:attributes="href python:'mail?' + principal['type'] + '=' + principal['id'];"
           tal:content="principal/title">
           sampleparticipant
        </a>
    </dd>
    </tal:groupspaces>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
